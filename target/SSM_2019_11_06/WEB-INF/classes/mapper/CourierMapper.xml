<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.lzy.dao.CourierDao">

<!-- 根据手机号查询用户信息 -->
    <select id="queryUserByPhone" parameterType="String"
                      resultType="cn.lzy.entity.User">
      SELECT
            id      ,
            phone   ,
            pass    ,
            NAME    ,
            salt    ,
            register_data   ,
            id_card         ,
            role    ,
            COUNT   ,
            sex
        FROM user a
        WHERE a.phone = #{phone}
    </select>
    <!-- 根据ID查询用户信息 -->
    <select id="queryUserById" parameterType="Integer"
            resultType="cn.lzy.entity.User">
      SELECT
            id      ,
            phone   ,
            pass    ,
            NAME    ,
            salt    ,
            register_data   ,
            id_card         ,
            role    ,
            COUNT   ,
            sex
        FROM user a
        WHERE a.id = #{id}
    </select>

<!-- 根据role字段查询用户信息列表-->
    <select id="queryUserByRole" parameterType="Integer"
            resultType="cn.lzy.entity.User">
        SELECT
            id      ,
            phone   ,
            pass    ,
            name    ,
            salt    ,
            register_data   ,
            id_card         ,
            role    ,
            count   ,
            sex
        FROM user a
        WHERE a.role = #{role}
    </select>

<!--  对应的插入字段的名字  -->
    <sql id="key">
        <trim suffixOverrides=",">
            <if test="phone !=null and phone!=''">
                phone,
            </if>

            <if test="name !=null and name!=''">
                name,
            </if>

            <if test="pass !=null and pass!=''">
                pass,
            </if>

            <if test="salt !=null and salt!=''">
                salt,
            </if>

            <if test="register_data !=null and register_data!=''">
                register_data,
            </if>

            <if test="id_card !=null and id_card!=''">
                id_card,
            </if>

            <if test="role !=null and role!=''">
                role,
            </if>

            <if test="count !=null and count!=''">
                count,
            </if>

            <if test="sex !=null and sex!=''">
                sex
            </if>
        </trim>
    </sql>

    <!--  对应的插入字段的名字  -->
    <sql id="values">
        <trim suffixOverrides=",">
            <if test="phone !=null and phone!=''">
                #{phone},
            </if>

            <if test="name !=null and name!=''">
                #{name},
            </if>

            <if test="pass !=null and pass!=''">
                #{pass},
            </if>

            <if test="salt !=null and salt!=''">
                #{salt},
            </if>

            <if test="register_data !=null and register_data!=''">
                #{register_data},
            </if>

            <if test="id_card !=null and id_card!=''">
                #{id_card},
            </if>

            <if test="role !=null and role!=''">
                #{role},
            </if>

            <if test="count !=null and count!=''">
                #{count},
            </if>

            <if test="sex !=null and sex!=''">
                #{sex}
            </if>
        </trim>
    </sql>

    <insert id="saveUser" parameterType="java.util.Map">
        insert into user(<include refid="key"/>)
        values(<include refid="values"/>)
    </insert>

    <!-- user信息更新   -->
    <update id="updateCourierById" parameterType="java.util.Map">
        update user
        <trim prefix="set" suffixOverrides=",">
            <if test="phone !=null and phone!=''">
                phone = #{phone},
            </if>

            <if test="pass !=null and pass!=''">
                pass = #{pass},
            </if>

            <if test="name !=null and name!=''">
                name = #{name},
            </if>

            <if test="salt != null and salt!=''">
                salt = #{salt},
            </if>

            <if test="register_data != null and register_data!=''">
                register_data = #{register_data},
            </if>

            <if test="id_card != null and id_card!=''">
                id_card = #{id_card},
            </if>

            <if test="role != null and role!=''">
                role = #{role},
            </if>

            <if test="count != null and count!=''">
                count = #{count},
            </if>

            <if test="sex != null and sex!=''">
                sex = #{sex},
            </if>
        </trim>

        where id = #{id}
    </update>

    <!-- 根据id 删除用户信息   -->
    <delete id="deleteCourierById" parameterType="java.util.Map">
        DELETE u
        FROM user u
        WHERE u.id = #{id}
    </delete>

<!--  查询所有用户数量 根据角色区分  -->
    <select id="queryUserCount" parameterType="Map" resultType="Integer">
       SELECT
        COUNT(ID)
       FROM user
        <if test="role != null and role!=''">
            WHERE ROLE = #{role}
        </if>

        <if test="toDate != null and toDate!='' and doDate != null and doDate!=''">
            AND register_data BETWEEN #{toDate} AND #{doDate}
        </if>



    </select>









</mapper>